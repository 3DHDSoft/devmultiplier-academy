{
  "name": "dev-x-academy-web",
  "description": "DevMultiplier Academy website",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "DevMultiplier Academy",
    "url": "https://DevMultiplier.com",
    "organization": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3DHDSoft/devmultiplier-academy.git"
  },
  "engines": {
    "node": "22.x",
    "bun": ">=1.3.5"
  },
  "packageManager": "bun@1.3.6",
  "scripts": {
    "dev": "NODE_OPTIONS='' next dev",
    "build": "prisma generate && NODE_ENV=production next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check 'src/**/*.{js,jsx,ts,tsx,css,md,mdx,json}'",
    "format:fix": "prettier -w 'src/**/*.{js,jsx,ts,tsx,css,md,mdx,json}'",
    "kitchensink": "prettier -w 'src/**/*.{js,jsx,ts,tsx,css,md,mdx,json}' && eslint . && tsc --noEmit && prisma generate && NODE_ENV=production next build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:headed": "playwright test --headed",
    "prepare": "NODE_OPTIONS='' husky",
    "telemetry:test": "NODE_OPTIONS='' tsx scripts/generate-test-telemetry.ts",
    "telemetry:traffic": "NODE_OPTIONS='' tsx scripts/generate-continuous-traffic.ts",
    "telemetry:login": "NODE_OPTIONS='' tsx scripts/test-login-metrics.ts"
  },
  "dependencies": {
    "@axiomhq/js": "^1.3.1",
    "@neondatabase/serverless": "^1.0.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.211.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-metrics": "^2.5.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/blob": "^2.0.1",
    "@vercel/otel": "^2.1.0",
    "@vercel/speed-insights": "^1.3.1",
    "bcryptjs": "^3.0.3",
    "botid": "^1.5.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "mermaid": "10.9.5",
    "next": "16.1.4",
    "next-auth": "^5.0.0-beta.30",
    "next-axiom": "^1.10.0",
    "next-intl": "^4.7.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rehype-mermaid": "^3.0.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "resend": "^6.8.0",
    "shiki": "^3.21.0",
    "stripe": "^20.2.0",
    "tailwind-merge": "^3.4.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.1.0",
    "zod": "^4.3.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,jsx,css,md,json}": "prettier --write"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@prisma/client": "^7.3.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/hast": "^3.0.4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/unist": "^3.0.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "happy-dom": "^20.3.7",
    "husky": "^9.1.7",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^7.3.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
