# Copy template to local (one-time setup)
# cp .devcontainer\.env.template .devcontainer\.env
# Edit .env.local with your real credentials (never committed)

# Postgres
POSTGRES_USER=admin
POSTGRES_PASSWORD=academy2026
POSTGRES_DB=academy
POSTGRES_HOST=postgres
POSTGRES_PORT=5433
POSTGRES_NON_ROOT_USER=test
POSTGRES_NON_ROOT_PASSWORD=test
POSTGRES_INITDB_ARGS="--encoding=UTF8 --locale=en_US.UTF-8"
PGDATA=/var/lib/postgresql/18/docker
POSTGRES_HOST_AUTH_METHOD=scram-sha-256
POSTGRES_SHM_SIZE=2.81G # Postgres shared memory sized to 64MB per available GB (~45 GB)
POSTGRES_CPU_LIMITS=4 # Postgres CPU limit ~50% of available WSL CPUs
POSTGRES_CPU_RESERVATIONS=2 # Postgres CPU reservation ~25% of available CPUs
POSTGRES_MEMORY_LIMITS=18G # Postgres memory limit ~40% of available WSL RAM
POSTGRES_MEMORY_RESERVATIONS=11G # Postgres memory reservation ~25% of available WSL RAM

# PGAdmin
PGADMIN_PORT=5051
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=123

# Health check
HEALTHCHECK_INTERVAL=10s
HEALTHCHECK_TIMEOUT=8s
HEALTHCHECK_RETRIES=10
HEALTHCHECK_START_PERIOD=30s
