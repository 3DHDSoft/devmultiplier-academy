# Copy template to local (one-time setup)
# cp .devcontainer\.env.template .devcontainer\.env
# Edit .env.local with your real credentials (never committed)

# Postgres
POSTGRES_USER=admin
POSTGRES_PASSWORD=academy2026
POSTGRES_DB=academy
POSTGRES_HOST=postgres
POSTGRES_PORT=5433
POSTGRES_NON_ROOT_USER=test
POSTGRES_NON_ROOT_PASSWORD=test
POSTGRES_INITDB_ARGS="--encoding=UTF8 --locale=en_US.UTF-8"
PGDATA=/var/lib/postgresql/18/docker
POSTGRES_HOST_AUTH_METHOD=scram-sha-256
# Postgres resources (reasonable dev defaults)
POSTGRES_SHM_SIZE=256m
POSTGRES_CPU_LIMITS=2
POSTGRES_CPU_RESERVATIONS=0.5
POSTGRES_MEMORY_LIMITS=2G
POSTGRES_MEMORY_RESERVATIONS=512M

# Dev container resources
DEV_CONTAINER_CPU_LIMITS=4
DEV_CONTAINER_CPU_RESERVATIONS=1
DEV_CONTAINER_MEMORY_LIMITS=8G
DEV_CONTAINER_MEMORY_RESERVATIONS=2G

# PGAdmin
PGADMIN_PORT=5051
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=123

# Health check
HEALTHCHECK_INTERVAL=10s
HEALTHCHECK_TIMEOUT=8s
HEALTHCHECK_RETRIES=10
HEALTHCHECK_START_PERIOD=30s

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
