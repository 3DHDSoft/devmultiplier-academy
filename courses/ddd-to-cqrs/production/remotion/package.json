{
  "name": "devmultiplier-animations",
  "version": "1.0.0",
  "description": "Animated diagrams for DevMultiplier Academy course videos",
  "scripts": {
    "start": "bunx remotion studio",
    "build": "bunx remotion bundle",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check 'src/**/*.{js,jsx,ts,tsx,css,md,mdx,json}'",
    "format:fix": "prettier -w 'src/**/*.{js,jsx,ts,tsx,css,md,mdx,json}'",
    "kitchensink": "prettier -w 'src/**/*.{js,jsx,ts,tsx,css,md,mdx,json}' && eslint . && tsc --noEmit && tsc --noEmit && prisma generate && NODE_ENV=production next build",
    "render": "bunx remotion render",
    "render:all": "bash scripts/render-all.sh"
  },
  "dependencies": {
    "@remotion/cli": "^4.0.407",
    "@remotion/player": "^4.0.407",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "remotion": "^4.0.407"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
